{
    "name": "open-in-vim",
    "displayName": "Open in Vim",
    "description": "Opens current file in vim",
    "repository":  "github:jonsmithers/vscode-open-in-vim.git",
    "version": "0.0.2",
    "publisher": "jonsmithers",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:open-in-vim.open"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "open-in-vim.open",
                "title": "Open in Vim"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Open in Vim",
            "properties": {
                "open-in-vim.openMethod": {
                    "type": "string",
                    "enum": [
                        "integrated-terminal",
                        "osx.iterm",
                        "osx.macvim"
                    ],
                    "scope": "resource",
                    "default": "integrated-terminal",
                    "description": "Determines how vim gets launched"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.6.1",
        "typescript": "^2.6.1"
    },
    "dependencies": {
        "tmp": "^0.0.33",
        "vscode": "^1.1.6"
    }
}
